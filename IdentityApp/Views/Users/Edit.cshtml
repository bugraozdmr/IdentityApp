@model EditViewModel

<div class="text-center">
    <h6 class="display-6">Edit User</h6>
</div>


<form asp-action="Edit" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    
    <input type="hidden" name="Id" value="@Model?.Id"/>
    
    <div class="mb-3">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" value="@Model?.Username"/>
    </div>
    
    <div class="mb-3">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" value="@Model?.FullName"/>
    </div>
    
    <div class="mb-3">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" value="@Model?.Email"/>
    </div>
    
    <div class="my-3">
        @foreach (var item in ViewBag.Roles)
            {
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="@item" name="SelectedRoles" checked="@(Model.SelectedRoles.Contains(item))" >
                  <label class="form-check-label" for="flexCheckDefault">
                    @item
                  </label>
                </div>
            }
    </div>
    
    <div class="card-header">
        Palora Güncelle
    </div>
    <div class="card card-body">
        <div class="mb-3">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" placeholder="paralo değişmek için girin"/>
            </div>
        <div class="mb-3">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" placeholder="paralo değişmek için girin"/>
        </div>
    </div>
    
    
    <div class="btn-group">
        <button type="submit" class="btn btn-primary">Güncelle</button>
        <a asp-action="Index" class="btn btn-warning">Geri</a>    
    </div> 
</form>